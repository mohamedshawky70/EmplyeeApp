@model Employee
@{
    ViewData["Title"] = Model is null ? "Add Employee" : "Edite Employee";
}

<h2>@ViewData["Title"]</h2>
@{
    SelectList s = new SelectList(ViewBag.dept, "DepartmentID", "DepartmentAbbr");
}
<div>
    <form method="post" asp-action=@(Model is null?"Create":"Edite") asp-controller="Employee">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="EmployeeName">Name</label>
            <input asp-for="EmployeeName" type="text" />
        </div>
        <br />
        <div>
            <label asp-for="EmployeeNumber">Number</label>
            <input asp-for="EmployeeNumber" type="text" />
        </div>
        <br />
        <div>
            <label asp-for="DOB">Date Of Birth</label>
            <input asp-for="DOB" type="text" />
        </div>
        <br />
        <div>
            <label asp-for="HiringDate">Hiring Date</label>
            <input asp-for="HiringDate" type="text" />
        </div>
        <br />
        <div>
            <label asp-for="GrossSalary">Gross Salary</label>
            <input asp-for="GrossSalary" type="text" />
        </div>
        <br />
        <br />
        <div>
            <label asp-for="NetSalary">NetSalary</label>
            <input asp-for="NetSalary" type="text" />
        </div>
        <br />
        <div>
            <label asp-for="DepartmentID">Departments</label>
            <select asp-for="DepartmentID" asp-items="s"></select>
        </div>
        <br />
        <div>
            <button type="submit">@(Model is null ? "Save" : "Update")</button>
            <a asp-action="GetAllEmployee" asp-controller="Employee">Cancel</a>
        </div>
        <br />
    </form>
</div>