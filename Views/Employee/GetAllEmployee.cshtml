@model IEnumerable<Employee>
<h1>All Employees </h1>

<a asp-action="Create" asp-controller="Employee">Add Employee</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number</th>
            <th>Date Of Birth</th>
            <th>Hiring Date</th>
            <th><a asp-action="Sort" asp-controller="Employee">Gross Salary</a></th>
            <th>Net Salary</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td> 
                <td>@item.EmployeeNumber</td> 
                <td>@item.DOB</td> 
                <td>@item.HiringDate</td> 
                <td>@item.GrossSalary</td> 
                <td>@item.NetSalary</td> 
                <td>@item.DepartmentName</td> 
                <td><a asp-action="Edite" asp-controller="Employee" asp-route-Id="@item.EmployeeID">Edite</a></td>
                <td><a asp-action="Delete" asp-controller="Employee" asp-route-Id="@item.EmployeeID" >Delete</a></td>
            </tr>
        }      
    </tbody>
</table>
 

